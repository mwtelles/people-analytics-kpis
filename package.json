{
  "name": "people-analytics-kpis",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm --filter frontend dev\" \"pnpm --filter backend dev\"",
    "dev:backend": "pnpm --filter backend dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "db:migrate": "sequelize-cli db:migrate --config db/config/config.cjs --migrations-path db/migrations",
    "db:migrate:undo": "sequelize-cli db:migrate:undo --config db/config/config.cjs --migrations-path db/migrations",
    "db:seed": "sequelize-cli db:seed:all --config db/config/config.cjs --seeders-path db/seeders",
    "db:seed:undo": "sequelize-cli db:seed:undo:all --config db/config/config.cjs --seeders-path db/seeders",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "build": "pnpm --filter backend build && pnpm --filter frontend build",
    "test": "pnpm --filter backend test && pnpm --filter frontend test",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.34.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "concurrently": "^9.2.0",
    "dotenv": "^17.2.1",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0",
    "husky": "^8.0.3",
    "prettier": "^3.6.2",
    "release-please": "^17.1.2",
    "sequelize-cli": "^6.6.3",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.40.0",
    "xlsx": "^0.18.5"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,css,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}